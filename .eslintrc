{
  "extends": [
    "airbnb-base",
    "plugin:import/errors",
    "prettier"
],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["prettier"],
  "rules": {
    "no-restrited-syntax": 0,
    "no-multi-assign": 0,
    "arrow-body-style": ["error", "as-needed"],
    "prettier/prettier": ["error", {
      "trailingComma": "all",
      "singleQuote": true,
      "printWidth": 120
    }],
    "no-restricted-syntax": [0, "ForOfStatement"],
    "max-classes-per-file": 0
  }
}